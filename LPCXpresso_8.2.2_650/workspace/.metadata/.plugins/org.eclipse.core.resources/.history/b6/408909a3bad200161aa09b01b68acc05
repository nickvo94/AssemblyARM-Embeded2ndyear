#include "DeltaTime.h"

DeltaTime::DeltaTime() {
	start = ticks;
	until = ticks;

}

void DeltaTime::startWait(uint32_t waitTime) {
	enabled = true;
	start = ticks;
	until = ticks + waitTime;
}

bool DeltaTime::isDone() {
	if (ticks >= until) { return true; }
	return false;
}

uint32_t DeltaTime::hasWaited() {
	return ticks - start;
}
