/**
* @brief Handle interrupt from SysTick timer
* @return Nothing
*/

using namespace std;

RealTimeClock myClock;

static RealTimeClock *clock = &myClock;

static volatile uint32_t timerTick;

void SysTick_Handler(void)
{
	if(clock != NULL) clock->Tick();//clock->Tick();
	//timerTick++;
}
#ifdef __cplusplus
}
#endif

void WriteTimeTemplate(int now,LiquidCrystal *display){
	display->setCursor(2, 1);
	display->print("Time");
	display->setCursor(13, 1);
	display->print(":");
	display->setCursor(10, 1);
	display->print(":");
	display->setCursor(11, 1);
	display->print("0");
	display->setCursor(14, 1);
	display->print("0");

}

int WriteSecond(int now, LiquidCrystal *display){
	char S[3]= {0,0,0};
	int s;
	display->setCursor(13, 1);
	display->print(":");
	s = (now/10)%60;
	sprintf(S,"%d", s);
	if(s < 10){
		display->setCursor(15, 1);
		display->print(S);
		display->setCursor(14, 1);
		display->print("0");
	}else{
		display->setCursor(14, 1);
		display->print(S);}
	if(s == 0 ){display->setCursor(14, 1); display->print("0");}
	return s;
}

int WriteMinute(int now,LiquidCrystal *display ){
	char M[3]= {0,0,0};
	int m;
	display->setCursor(10, 1);
	display->print(":");
	m = (now/600)%60;
	if(m>60){m=0;}
	sprintf(M,"%d", m);
	if(m < 10){
		display->setCursor(12, 1);
		display->print(M);
		display->setCursor(11, 1);
		display->print("0");
	}else{
		display->setCursor(11, 1);
		display->print(M);}
	if(m == 0 ){display->setCursor(11, 1);display->print("0");}
	return m;
}

int WriteHour(int now,LiquidCrystal *display){
	char H[3]= {0,0,0};
	int h;
	h = (now/36000)%24;
	if(h>24){h=0;}
	sprintf(H,"%d", h);
	if(h < 10){
		display->setCursor(9, 1);
		display->print(H);
	}else{
		display->setCursor(8, 1);
		display->print(H);}
	if(h == 0 ){display->setCursor(8, 1);display->print(" ");}
	return h;
}

void WriteSetAlarm (LiquidCrystal *display,int but1press){
	display->setCursor(2, 0);
	display->print("Set Alarm");
	display->setCursor(4, 1);
	display->print(":");
	display->setCursor(3, 1);
	display->print("0");
	display->setCursor(5, 1);
	display->print("0");
	display->setCursor(6, 1);
	display->print("0");

}

void WriteSetTime (LiquidCrystal *display, int but1press){
	display->setCursor(2, 0);
	display->print("Set Time ");
	display->setCursor(4, 1);
	display->print(":");
	display->setCursor(3, 1);
	display->print("0");
	display->setCursor(5, 1);
	display->print("0");
	display->setCursor(6, 1);
	display->print("0");
	display->setCursor(13, 0);
	display->print("   ");
}

void Do4But1(int but1press,LiquidCrystal *display, string onOff, int x, int y){
	if(but1press == 0){
		display ->clear();
		display->setCursor(x, y);
		display->print("Time");
	}
	if(but1press == 1){
		display ->clear();
		display ->setCursor(x-1, y);
		display ->print(">");
		display ->setCursor(x, y);
		display ->print(onOff);
	}
	if(but1press == 2){
		display ->setCursor(x+11, y-1);
		display ->print(" ");
		display ->setCursor(x, y);
		display ->print(">");
	}
	if(but1press == 3 || but1press == 5){
		display ->setCursor(x-6, y);
		display ->print(" ");
		display ->setCursor(x, y);
		display ->print("<");
	}
	if(but1press == 4){
		display ->setCursor(x+6, y);
		display ->print(" ");
		display ->setCursor(x, y);
		display ->print(">");
	}

}

int ReadSetHour(int setH, int but1press,int but2press){
	if(but1press == 2 || but1press == 4){
		if(but2press < 24 && but2press > 0){setH = setH + 1;}
		if(but2press == 24){setH = 0;}
		if(but2press > 24){setH = 60%24 + 1;}
		return setH;
	}
}
int ReadSetMinute(int setM, int but1press,int but2press){
	if(but1press == 3 || but1press == 5){
		int setM;
		setM = but2press;
		return setM;
	}
}

void PrintH (int setH, LiquidCrystal *display, string onOff, int x, int y){
	char H[3] = {0,0,0};
	if(setH>23){setH=0;}
	sprintf(H,"%d", setH);
	if(setH < 10){
		display ->setCursor(x, y);
		display ->print(H);
	}else{
		display ->setCursor(x-1, y);
		display ->print(H);}
	if(setH == 0 ){display ->setCursor(x-1, y);display ->print(" ");}
}

void PrintM (int setM, LiquidCrystal *display, string onOff, int x, int y){
	char M[3] = {0,0,0};
	if(setM>23){setM=0;}
	sprintf(M,"%d", setM);
	if(setM < 10){
		display ->setCursor(x, y);
		display ->print(M);
	}else{
		display ->setCursor(x-1, y);
		display ->print(M);}
	if(setM == 0 ){display ->setCursor(x-1, y);display ->print("0");}
}


int ReadBut(DigitalIoPin *button, int but123press, int min, int max){
	bool but123value;
	but123value = button->read();
	if(but123value == true){
		while(but123value){
			but123value = button->read();
		} //but1value : false
		but123press = but123press + 1;
		if(but123press > max){but123press = min;}
	}
	return but123press;
}

